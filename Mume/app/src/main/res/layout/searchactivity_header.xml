<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchactivityheadertop_linearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/searchtitle_textview"
        android:text="@string/searchtitle_textview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#262626"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/searchundertitle_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:background="#262626"
        android:text="@string/undertitlesearch_textview_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262626">

        <EditText
            android:id="@+id/searchbar_edittext"
            android:hint="@string/searchbar_edittext_hint"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:paddingBottom="20dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:background="#ffffff"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="15dp"
            android:imeOptions="actionGo"
            android:inputType="text"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cardviewtitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/fbimageheader_textview_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>